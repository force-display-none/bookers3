<h2>Editing Book</h2>

<%= form_for(book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<P>(maximum is 200 characters)</P>
	<%= f.text_area :body %>

<div>
    <%= f.submit 'Update Book' %><br>
</div>
<% end %>
<%= link_to "Back", book_path(@book), class: "back" %>
 | 
 <%= link_to "Books", books_path, class: "books" %>
