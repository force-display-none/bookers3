<% unless @path.is('books#show') %>
  <h2>Books</h2>
<% else %>
  <h2>Book detail</h2>
<% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <% if @path.is('books#show') %>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead>

<% if @path.is('books#show') %>

    <tbody>
      <tr>
        <td><%= attachment_image_tag book_show.user, :image, :fill, 50, 50, fallback: "no-image-icon.jpg"%>
          <br><%= link_to "#{book_show.user.name}", user_path(book_show.user) %></td>
        <td><%= book_show.title %></td>
        <td><%= book_show.body %></td>
                  <% if @user == current_user %>
        <td><%= link_to "edit", edit_book_path(book_show) %></td>
        <td><%= link_to "destroy", book_path(book_show), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                  <% else %>
        <td></td>
        <td></td>
                  <% end %>
      </tr>
    </tbody>

<% else %>

    <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :image, :fill, 50, 50, fallback: "no-image-icon.jpg"%>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>

<% end %>

  </table>
