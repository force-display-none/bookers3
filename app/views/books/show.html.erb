<% provide(:title, "BookDetailPage") %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user_info', user: @user %>
      <section class="stats">
        <%= render 'users/stats', user: @user %>
      </section>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-9">
      <%= render 'books/book_table', book_show: @book_show %>
      <%= render 'likes/like', book_show: @book_show, user: @user %>
      <p>コメント<%= @book_show.book_comments.count %>件</p>
      <%= render 'book_comments/form', book_show: @book_show, comment: @comment %>
      <%= render 'book_comments/body', book_show: @book_show %>
    </div>
  </div>
</div>
