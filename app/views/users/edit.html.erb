<% provide(:title, "EditUserPage") %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name, class: "name" %>
	<h4>Image</h4>
	<%= f.attachment_field :image, class: "user_image" %>
	<h4>Introduction</h4>
	<%= f.text_area :introduction, class: "introduction" %>

<div>
    <%= f.submit 'Update User' %>
</div>

<% end %>
