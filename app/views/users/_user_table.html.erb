<h2>Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :image, :fill, 50, 50, fallback: "no-image-icon.jpg"%></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>