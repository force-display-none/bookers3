<h2>Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: "50x50" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>