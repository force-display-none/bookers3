<h2>User info</h2>
  <table class="table">
    <tr>
      <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: "100x100" %>
    </tr>

    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th class="word-break"><%= user.introduction %></th>
    </tr>
  </table>
  <% if user == current_user %>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "edit_user_#{user.id}" do %>
      <button type="button" class="col-xs-12"><span class="glyphicon glyphicon-wrench"></span></button>
    <% end %>
  </div>
  <% end %>
